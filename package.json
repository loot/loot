    "@babel/preset-react": "^7.12.7",
    "@babel/preset-typescript": "^7.12.7",
    "@types/cytoscape": "^3.14.7",
    "@types/jest": "^26.0.20",
    "@types/lodash": "^4.14.168",
    "@types/marked": "^1.1.0",
    "@types/node": "^12.12.54",
    "@typescript-eslint/eslint-plugin": "^1.13.0",
    "@typescript-eslint/parser": "^1.13.0",
    "awesome-typescript-loader": "^5.2.1",
    "babel-gettext-extractor": "git://github.com/loot/babel-gettext-extractor#v4.1.3+improved-entry-sorting.1",
    "babel-jest": "^26.3.0",
    "babel-loader": "^8.2.2",
    "copy-webpack-plugin": "^7.0.0",
    "eslint": "^5.5.0",
    "eslint-config-airbnb": "^17.1.0",
    "eslint-config-prettier": "^6.15.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-jsx-a11y": "^6.4.1",
    "eslint-plugin-prettier": "^3.3.1",
    "eslint-plugin-react": "^7.20.5",
    "html-webpack-plugin": "^5.2.0",
    "jest": "^26.6.3",
    "prettier": "^2.2.1",
    "source-map-loader": "^2.0.0",
    "ts-jest": "^26.5.2",
    "typescript": "^3.9.7",
    "webpack": "^5.24.2",
    "webpack-cli": "^4.4.0"
  },
  "scripts": {
    "build": "node ./scripts/get_roboto_files.js && webpack",
    "test": "jest",
    "lint": "eslint --ignore-path .gitignore --ext .js --ext .jsx --ext .ts --ext .tsx ."
  },
  "babel": {
    "plugins": [
      "@babel/plugin-proposal-object-rest-spread"
    ],
    "presets": [
      [
        "@babel/preset-env",
        {
          "targets": {
            "chrome": 68
          }
        }
      ],
      "@babel/preset-react"
    ]
  },
  "eslintConfig": {
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
      "ecmaFeatures": {
        "jsx": true
      },
      "project": "./tsconfig.json"
    },
    "env": {
      "node": true,
      "browser": true,
      "jest": true
    },
    "globals": {
      "loot": false
    },
    "plugins": [
      "@typescript-eslint",
      "prettier"
    ],
    "settings": {
      "import/resolver": {
        "node": {
          "extensions": [
            ".js",
            ".jsx",
            ".ts",
            ".tsx"
          ]
        }
      }
    },
    "extends": [
      "eslint:recommended",
      "plugin:@typescript-eslint/eslint-recommended",
      "plugin:@typescript-eslint/recommended",
      "airbnb",
      "prettier",
      "prettier/@typescript-eslint"
    ],
    "rules": {
      "curly": [
        "error",
        "all"
      ],
      "linebreak-style": "off",
      "no-confusing-arrow": "error",
      "no-param-reassign": [
        "error",
        {
          "props": false
        }
      ],
      "no-underscore-dangle": "off",
      "prefer-destructuring": "off",
      "import/extensions": {
        "js": "always"
      },
      "prettier/prettier": "error",
      "react/destructuring-assignment": 0,
      "react/jsx-one-expression-per-line": 0,
      "react/sort-comp": 0,
      "@typescript-eslint/no-var-requires": "off",
      "@typescript-eslint/explicit-function-return-type": [
        "error",
        {
          "allowExpressions": true
        }
      ],
      "no-useless-constructor": "off",
      "import/no-extraneous-dependencies": [
        "error",
        {
          "devDependencies": [
            "webpack.config.js",
            "**/tests/**"
          ],
          "optionalDependencies": false
        }
      ],
      "no-restricted-syntax": [
        "error",
        {
          "selector": "ForInStatement",
          "message": "for..in loops iterate over the entire prototype chain, which is virtually never what you want. Use Object.{keys,values,entries}, and iterate over the resulting array."
        },
        {
          "selector": "LabeledStatement",
          "message": "Labels are a form of GOTO; using them makes code confusing and hard to maintain and understand."
        },
        {
          "selector": "WithStatement",
          "message": "`with` is disallowed in strict mode because it makes code impossible to predict and optimize."
        }
      ],
      "react/jsx-filename-extension": [
        "error",
        {
          "extensions": [
            ".jsx",
            ".tsx"
          ]
        }
      ]
    }
  },
  "jest": {
    "collectCoverage": true,
    "testRegex": "tests/gui/html/js/.+\\.[jt]sx?$",
    "transform": {
      "\\.tsx?$": "ts-jest",
      "\\.jsx?$": "babel-jest"
    }
  },
  "prettier": {
    "singleQuote": true,
    "trailingComma": "none",
    "arrowParens": "avoid",
    "endOfLine": "auto"
  }
}
