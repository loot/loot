namespace loot {
std::string getLootVersion() {
  static const auto LOOT_VERSION = std::to_string(LOOT_VERSION_MAJOR) + '.' +
                                   std::to_string(LOOT_VERSION_MINOR) + '.' +
                                   std::to_string(LOOT_VERSION_PATCH);

  return LOOT_VERSION;
}

